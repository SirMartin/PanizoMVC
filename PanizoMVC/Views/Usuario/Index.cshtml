@{
    ViewBag.Title = "Index";
    Layout = null;
}
<script type='text/javascript' src='http://directorio.cachirulovalley.com/javascripts/jquery-1.7.min.js'></script>
<script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js'></script>
<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/themes/start/jquery-ui.css" />
<link rel="stylesheet" href="@Url.Content("/Content/css/jquery.tagsinput.css")" type="text/css"  />
<script src="@Url.Content("~/Scripts/jquery.tagsinput.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tags').tagsInput({
            autocomplete_url: '@Url.Action("Index", "Ingredientes")', // jquery ui autocomplete requires a json endpoint
            height: '100px',
            width: '40%',
            //interactive: true,
            defaultText: 'Añade uno',
            removeWithBackspace: true,
            //minChars: 0,
            //maxChars: 0, //if not provided there is no limit,
            placeholderColor: '#666666'
        });
    });
</script>
<p>
    <label>
        Ingredientes</label>
    <input id='tags' type='text' class='tags' /></p>
