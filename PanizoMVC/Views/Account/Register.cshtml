@model PanizoMVC.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "contactForm"}))
{
@Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
<!-- column (left)-->
<div class="one-column">
    <!-- form -->
    <br />
    <h2>
        Crea tu cuenta en Entrepan.net</h2>
    <br />
    <fieldset>
        <div>
            @Html.LabelFor(model => model.Nick)
            @Html.TextBoxFor(model => model.Nick, new { @class = "form-poshytip", title = "Introduce tu nombre de usuario.", tabindex = 1 })
            @Html.ValidationMessageFor(model => model.Nick)
        </div>
        <div>
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-poshytip", title = "Introduce tu dirección de email.", tabindex = 2 })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div>
            @Html.LabelFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password, new { @class = "form-poshytip", title = "La contraseña debe tener un mínimo de " + Membership.MinRequiredPasswordLength + "carácteres de longitud.", tabindex = 3 })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div>
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-poshytip", title = "Repite la contraseña.", tabindex = 4 })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
        <div>
            @Html.Hidden("IdRestaurante", ViewData["IdRestaurante"])
        </div>
    </fieldset>
    <p>
        <input type="submit" value="REGISTRATE !" name="submit" id="submit" tabindex="5" style="width: 150px;"
            title="Registrate !" /></p>
    <p id="error" class="warning">
        Message</p>
    <p id="success" class="success">
        Thanks for your comments.</p>
    <!-- ENDS form -->
</div>
<!-- ENDS column -->
} 