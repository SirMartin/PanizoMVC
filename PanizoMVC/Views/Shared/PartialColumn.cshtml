@model PanizoMVC.Models.ColumnModel
<li><a href="@Url.Action(Model.Action, Model.Controller, Model.Parameters)" class="thumb" title="@Model.Titulo">
    <img src="@Model.UrlImage" alt="Post" /></a>
    <div>
        @{
            Dictionary<string, object> dicHtml = new Dictionary<string, object>();
            dicHtml.Add("class", "header");
        }
        @Html.ActionLink(Model.Titulo, Model.Action, Model.Controller, Model.Parameters, dicHtml)
        @Model.Texto
    </div>
    <a href="@Url.Action(Model.Action, Model.Controller, Model.Parameters)">@Model.TextoAbajo
        &#8594;</a> </li>
