<body class="home">
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- HEADER -->
        <div id="header">
            <a href="/">
                <img id="logo" src="../../Content/style/logopan.png" alt="Entrepan.net" /></a>
            <a id="logotexto" href="/">ZARAGOZA.ENTREPAN.NET</a>
            <!-- Social -->
            <div id="social-holder">
                <ul class="social">
                    <li><a href="http://www.facebook.com" class="poshytip facebook" title="Hazte fan"></a>
                    </li>
                    <li><a href="http://www.twitter.com" class="poshytip twitter" title="Siguenos en Twitter">
                    </a></li>
                </ul>
            </div>
            <!-- ENDS Social -->
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <!-- Navigation -->
            <ul id="nav" class="sf-menu">
                @if ((Request.Url.ToString().ToLower().Contains("/Restaurante".ToLower()))
                    || (Request.Url.ToString().ToLower().Contains("/Bocadillo".ToLower()))
                    || (Request.Url.ToString().ToLower().Contains("/Home/About".ToLower())))
                {
                    <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                }
                else
                {
                    <li class="current-menu-item">@Html.ActionLink("HOME", "Index", "Home")</li>
                }
                @if (Request.Url.ToString().ToLower().Contains("/Restaurante".ToLower()))
                {
                    <li class="current-menu-item">@Html.ActionLink("LOCALES", "Index", "Restaurante")
                        @*                    <ul>
                        <li><a href="features-appearance.html"><span>Los + votados</span></a></li>
                        <li><a href="features-columns.html"><span>Últimos</span></a></li>
                        <li><a href="features-accordion.html"><span>Añadir local</span></a></li>
                        <li><a href="features-accordion.html"><span>Otros</span></a></li>
                    </ul>*@ </li>
                }
                else
                {
                    <li>@Html.ActionLink("LOCALES", "Index", "Restaurante")</li>
                }
                @if (Request.Url.ToString().ToLower().Contains("/Bocadillo".ToLower()))
                {
                    <li class="current-menu-item">@Html.ActionLink("BOCADILLOS", "Index", "Bocadillo")
                        @*<ul>
                        <li><a href="features-appearance.html"><span>Los + votados</span></a></li>
                        <li><a href="features-columns.html"><span>Últimos</span></a></li>
                        <li><a href="features-accordion.html"><span>Añadir bocadillo</span></a></li>
                    </ul>*@ </li>
                }
                else
                {
                    <li>@Html.ActionLink("BOCADILLOS", "Index", "Bocadillo")</li>
                }
                @if (Request.Url.ToString().ToLower().Contains("/Home/About".ToLower()))
                {
                    <li class="current-menu-item">@Html.ActionLink("CONTACTO", "About", "Home")</li>
                }
                else
                {
                    <li>@Html.ActionLink("CONTACTO", "About", "Home")</li>
                }
            </ul>
            <!-- Navigation -->
            <!-- search -->
            <div class="top-search">
                <form method="get" id="searchform" action="#">
                <div>
                    <input type="text" value="Buscar..." name="s" id="s" onfocus="defaultInput(this)"
                        onblur="clearInput(this)" />
                    <input type="submit" id="searchsubmit" value=" " />
                </div>
                </form>
            </div>
            <!-- ENDS search -->
        </div>
        <!-- ENDS HEADER -->
        <!-- MAIN -->
        <div id="main">
            <!-- content -->
            <div id="content">
                @RenderBody()
            </div>
            <!-- ENDS content -->
        </div>
        <!-- ENDS MAIN -->
        <!-- FOOTER -->
