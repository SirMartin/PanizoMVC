@model PanizoMVC.Restaurante
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<form id="contactForm" action="@Url.Action("Create", "Restaurante")" method="post">
<!-- column (left)-->
<div class="one-column">
    <!-- form -->
    <h2>
        Crear Restaurante</h2>
    <fieldset>
        <div>
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-poshytip", title = "Introduce el nombre del restaurante" })
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>
        <div>
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-poshytip", title = "Introduce el email de contacto" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div>
            @Html.LabelFor(model => model.Web)
            @Html.TextBoxFor(model => model.Web, new { @class = "form-poshytip", title = "Introduce la web del restaurante" })
            @Html.ValidationMessageFor(model => model.Web)
        </div>
        <div>
            @Html.LabelFor(model => model.Descripcion)
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-poshytip", title = "Una breve descripción", rows = "5", cols = "20" })
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>
    </fieldset>
    <p>
        <input type="submit" value="AÑADIR" name="submit" id="submit" /></p>
    <p id="error" class="warning">
        Message</p>
    <p id="success" class="success">
        Thanks for your comments.</p>
    <!-- ENDS form -->
</div>
<!-- ENDS column -->
<!-- column (right)-->
<div class="one-column">
    <h2>
        &nbsp;</h2>
    <div>
        @Html.LabelFor(model => model.Direccion)
        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-poshytip", title = "Introduce la dirección" })
        @Html.ValidationMessageFor(model => model.Direccion)
    </div>
    <div>
        @Html.LabelFor(model => model.CP)
        @Html.TextBoxFor(model => model.CP, new { @class = "form-poshytip", title = "Introduce el código postal" })
        @Html.ValidationMessageFor(model => model.CP)
    </div>
    <div>
        @Html.LabelFor(model => model.Telefono)
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-poshytip", title = "Introduce el teléfono de contacto" })
        @Html.ValidationMessageFor(model => model.Telefono)
    </div>
</div>
<!-- ENDS column -->
</form>
